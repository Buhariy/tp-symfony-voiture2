{% extends "admin/admin_base.html.twig" %}

{% block body %}

	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Membre</th>
					<th scope="col">Véhicule</th>
					<th scope="col">Date de départ</th>
					<th scope="col">Date de d'arriver</th>
					<th scope="col">Prix totale</th>
					<th scope="col">Date d'enregistrement</th>
					<th scope="col">Action</th>

				</tr>
			</thead>
			<tbody>
				{% for cmd in commandes %}
					<tr>
						<td scope="col">{{cmd.id}}</td>
						<td scope="col">{{cmd.user.nom}}</td>
						<td scope="col">{{cmd.vehicule.titre}}</td>
						<td scope="col">{{cmd.dateHeureDepart|date('Y-m-d H:i:s')}}</td>
						<td scope="col">{{cmd.dateHeureFin|date('Y-m-d H:i:s')}}</td>
						<td scope="col">{{cmd.prixTotal}}€</td>
						<td scope="col">{{cmd.dateEnregistrement|date('Y-m-d H:i:s')}}</td>
                        <td>
                        <a href="#"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="#"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="container">
		<a href="#" class="btn btn-success">Ajouter un véhicule</a>
	</div>
{% endblock %}
